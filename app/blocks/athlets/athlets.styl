.athlets
	position relative
	font-family $proximanova
	background-color #fff

	+between(480px, 768px)
		font-size rem(13)

	&::after
		position absolute
		top em(80)
		left 50%
		width 100%
		max-width 1560px
		height em(281)
		content ''
		background-image url('../images/football-player_sm.png')
		background-repeat no-repeat
		background-position 47% 0
		transform translateX(-50%)

		+above(480px)
			top em(74)
			height 100%
			background-image url('../images/football-player_md.png')
			background-position 0 0

		+between(480px, 768px)
			background-size 40%

		+above(1024px)
			background-image url('../images/football-player_lg.png')

		+between(1024px, 1279px)
			background-size 40%

		+above(1280px)
			top 0
			background-position 14% 41px

	&__title-wrapper
		padding-x em(20)
		width auto

		+above(480px)
			padding-right em(10)
			padding-left prc(291/768)

		+above(1280px)
			padding-right em(15)
			padding-left em(828)
			wrapper(1560px)

	&__title
		padding-top em(16, 50)
		min-height em(306, 50)
		font-size em(50)
		font-weight 700
		line-height (60/50)
		letter-spacing em(-1, 50)
		text-transform uppercase
		color #e7e7e7

		+above(480px)
			padding-top em(72, 90)
			min-height 0
			font-size em(90)
			font-weight 700
			line-height (90/90)
			letter-spacing em(-1.5, 90)

		+between(480px, 768px)
			font-size em(80)

		+above(1280px)
			padding-top em(103, 90)
			letter-spacing em(-.8, 90)

	&__list
		padding-bottom em(10)
		min-height em(283)
		background-color #f5f4f9

		+above(480px)
			padding-bottom 0
			min-height 0
			background-color transparent

	// стили для переключателей slick слайдера
	.slick-dots
		margin-top 2px
		text-align center

		& li
			margin-right 12px
			display inline-block

			&:last-of-type
				margin-right 0

		& button
			width 10px
			height 10px
			font-size 0
			background-color #d8d8d8
			border none
			border-radius 50%

	.slick-active

		& button
			background-color #5c3caf
