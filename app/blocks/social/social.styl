.social
	text-align justify

	+above(768px)
		text-align left

	&::before
		display block
		width 100%
		content ''

	&::after
		display inline-block
		width 100%
		content ''

	&__item
		position relative
		display inline-block
		vertical-align top

		+above(768px)
			vertical-align middle

		&_facebook
			size 10px 18px

			+above(768px)
				margin-right 38px
				svgSize($facebook)

		&_twitter
			size 18px 15px

			+above(768px)
				margin-right 27px
				svgSize($twitter)

		&_instagram
			size 17px 17px

			+above(768px)
				svgSize($instagram)

	&__img
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		fill #fff

